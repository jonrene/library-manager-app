extends layout 

block content 

    h1=title 

    form
        p 
            label(for="title") Title
            input(name="title" type="text" id="title" value=book.title)

        p 
            label(for="title") Author
            input(name="title" type="text" id="author" value=book.author)

        p 
            label(for="title") Genre
            input(name="title" type="text" id="genre" value=book.genre)

        p 
            label(for="title") Year
            input(name="title" type="text" id="year" value=book.year)

        p
            input(type="submit" value="Update Book")

    form(method="post" action=`/books/${id}/delete`)

        p
            a(class="button" href="/") Cancel

        p
            input(type="submit" value="Delete Book")